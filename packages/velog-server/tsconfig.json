{
  "compilerOptions": {
    "lib": ["ES2022"],                                       
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "ES2022",
    "moduleResolution": "Node",                   
    "baseUrl": "./",                               
    "paths": {                                     
      "@common/*": ["src/common/*"],
      "@graphql/*": ["src/graphql/*"],
      "@test/*": ["src/test/*"],
      "@lib/*": ["src/lib/*"],
      "@routes/*": ["src/routes/*"],
      "@services/*": ["src/services/*"]
    },                                     
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],                                 
    "outDir": "./dist",
    "esModuleInterop": true,   
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./src", ".eslintrc.cjs", "jest.*"],
  "exclude": [],
  "ts-node": {
    "transpileOnly": true
  }
}
